<%- include("Header") -%>

<div class="box" id="heading">
  <h1><%= ListTitle %></h1>
</div>

<div class="box">
  <% items.forEach(item => { %>
  <div class="item">
    <input type="checkbox" />
    <p id="itemText"><%= item.name %></p>

    <form action="/edit" method="POST" style="display: inline">
      <input type="hidden" name="id" value="<%= item.id %>" />
      <input
        type="hidden"
        name="list"
        value="<%= ListTitle === 'Work List' ? 'Work' : 'Home' %>"
      />
      <button type="submit" class="button-icon">Edit</button>
    </form>

    <form action="/delete" method="POST" style="display: inline">
      <input type="hidden" name="id" value="<%= item.id %>" />
      <input
        type="hidden"
        name="list"
        value="<%= ListTitle === 'Work List' ? 'Work' : 'Home' %>"
      />
      <button type="submit" class="button-icon">Del</button>
    </form>
  </div>
  <% }); %>

  <form action="/" method="POST">
    <input type="text" name="item" placeholder="New item" required />
    <input
      type="hidden"
      name="list"
      value="<%= ListTitle === 'Work List' ? 'Work' : 'Home' %>"
    />
    <button type="submit">+</button>
  </form>
</div>

<%- include("footer") -%>
